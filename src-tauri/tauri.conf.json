{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "pipshe",
  "version": "0.1.0",
  "identifier": "com.wangenius.pipshe",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "pipshe",
        "width": 800,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "label": "main",
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "capabilities": [
        "main-capability"
      ],
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "publisher": "wangenius",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}