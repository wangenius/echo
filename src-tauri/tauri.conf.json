{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "echo",
  "version": "0.1.9",
  "identifier": "com.wangenius.echo",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "echo",
        "width": 600,
        "height": 400,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "label": "main",
        "center": true,
        "url": "/",
        "visible": false,
        "focus": true,
        "maximizable": false,
        "minimizable": false
      },
      {
        "title": "添加模型",
        "width": 400,
        "height": 500,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "model-add",
        "center": true,
        "url": "/model-add",
        "visible": false,
        "parent": "main",
        "maximizable": false,
        "minimizable": false
      },
      {
        "title": "添加机器人",
        "width": 400,
        "height": 500,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "bot-add",
        "center": true,
        "url": "/bot-add",
        "visible": false,
        "parent": "main",
        "maximizable": false,
        "minimizable": false
      },
      {
        "title": "编辑模型",
        "width": 400,
        "height": 500,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "model-edit",
        "center": true,
        "url": "/model-edit",
        "visible": false,
        "parent": "main",
        "maximizable": false,
        "minimizable": false
      },
      {
        "title": "编辑机器人",
        "width": 400,
        "height": 500,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "bot-edit",
        "center": true,
        "url": "/bot-edit",
        "visible": false,
        "parent": "main",
        "maximizable": false,
        "minimizable": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "capabilities": [
        "main-capability"
      ],
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "publisher": "wangenius",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ]
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "active": true,
      "endpoints": [
        "https://github.com/wangenius/echo/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlGQzZBMkM3QkMwRjU3QUMKUldTc1Z3Kzh4NkxHbjEvOURYOHBpZEV4aWxYZjZrcWR1UVkza0tWTW9MYm1TVXkzRERiQ1pEcDAK"
    }
  }
}
